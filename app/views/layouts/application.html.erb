<!DOCTYPE html>
<html>
<head>
  <title>Livaloud</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>

  <link href="LivAloud.css" rel="stylesheet">

</head>
<body>


  <!-- header  -->
      <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="container wrapper">
          <div >
            <form class="navbar-form navbar-right">
              <span class="top-header">
                <% if current_user %>
                  <%= current_user.email %>

              </span>
              <span class = "top-header">
                <%= link_to 'Log Out', session_path, method: :delete %>

                <%= image_tag "Avatar.jpg",height: '32', width: '28', class: "img-profile"%>
              </span>



              <% else %>

                <%= form_tag session_path do %>
                  <div class="form-group">
                    <%= email_field_tag('email',nil, class: "form-control", placeholder: "Email") %>
                  </div>

                  <div class="form-group">
                    <%= password_field_tag 'password',nil,class: "form-control", placeholder: "Password" %>
                  </div>

                  <%= submit_tag 'Sign in', class: "btn btn-success" %>
                  <!--<div class="form-group">
                    <%= button_to 'Sign up', class: "btn btn-success" %>
                  </div> -->

                <% end %>



              <% end %>

            </form>
          </div><!--/.navbar-collapse -->

          <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>

            <div class="navbar-brand"><%= link_to "LivAloud", controller: :users %></div>

            <% if path = 'users/index' %>
              <div class="index-bottom-container">
                <%= link_to "What is LivAloud?", new_user_goal_path, class: "index-bottom-button" %>
                <%= link_to "Community", new_user_goal_path, class: "index-bottom-button" %>
                <%= link_to "About Us", new_user_goal_path, class: "index-bottom-button" %>

              </div>
            <% else %>
              <div class="index-bottom-container">
                <%= link_to "Dashboard", new_user_goal_path, class: "index-bottom-button" %>
                <%= link_to "Community", new_user_goal_path, class: "index-bottom-button" %>
                <%= link_to "About Us", new_user_goal_path, class: "index-bottom-button" %>

              </div>

            <% end %>


          </div>


        </div>
      </div>

  <div class="index-header">
    <div class="container wrapper">
    <%= yield %>

    </div>
  </div>



</body>

</html>
